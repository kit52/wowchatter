<section class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="breadcrumbs__list">
                    {% for breadcrumb in breadcrumbs %}
                    <li class="breadcrumbs__item {{loop.index == 1 ? 'bold'}}">
                        <a href="{{ breadcrumb.link }}">
                            {{ breadcrumb.text }}
                        </a>
                    </li>

                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</section>